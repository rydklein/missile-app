generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int            @id @default(autoincrement())
  device_identifier String        @unique
  device_token     String         @unique
  name             String?
  health            Int            @default(3)
  ownedObjects     Object[]       @relation("UserObjects")
  missileRanges    MissileRange[] // Relation to track missile range status for each user
}

model Object {
  id             Int            @id @default(autoincrement())
  lat            Float
  long           Float
  type           String
  launched       Boolean        @default(false)
  inFlight       Boolean        @default(false)
  owner          User           @relation("UserObjects", fields: [ownerId], references: [id])
  ownerId        Int
  missileRanges  MissileRange[] // Relation to track range status with users
}

model MissileRange {
  id         Int     @id @default(autoincrement())
  user       User    @relation(fields: [userId], references: [id])
  userId     Int
  missile    Object  @relation(fields: [missileId], references: [id])
  missileId  Int
  inRange    Boolean // Indicates if user is in range of missile

  @@unique([userId, missileId]) // Unique constraint for each user-missile pair
}
